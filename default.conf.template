server {
    listen       80;
    listen  [::]:80;
    server_name  localhost;

    location / {
        root   /usr/share/nginx/html;
        try_files $uri $uri/ /index.html;
    }
}

server {
    listen       8000;
    server_name  localhost;

    location  ~ ^/(.*)$ {
        resolver 127.0.0.11 ipv6=off;
        proxy_pass   ${BACKEND_BASEURL}/$1?$query_string;
    }
}
